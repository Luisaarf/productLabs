{
  "modal-trigger#quickview-buylist": {
    "children": [
      "add-button-product-list",
      "modal-layout#quickview-buylist"
    ],
    "props": {
      "blockClass": "quickview"
    }
  },

  "modal-layout#quickview-buylist": {
    "children": [
      "modal-header#quickview-buylist",
      "flex-layout.row#quickview-buylist-main-row"
    ],
    "props": {
      "blockClass": "quickview"
    }
  },
  "modal-header#quickview-buylist": {
    "props": {
      "blockClass": "quickview"
    }
  },

  "modal-content#quickview-buylist": {
    "children": [
      "vtex.store-components:product-name",
      "flex-layout.col#quickview-buylistPrice",
      "product-summary-sku-selector#quickview-buylist"
    ],
    "props": {
      "blockClass": "quickviewContent"
    }
  },
  "flex-layout.col#quickview-buylistPrice": {
    "children": [
      "flex-layout.row#list-price-savings",
      "flex-layout.row#selling-price",
      "product-installments"
    ]
  },
  "modal-actions#quickview-buylist": {
    "props": {
      "blockClass": "quickview"
    },
    "children": [
      "flex-layout.row#quickview-buylist-actions-1",
      "flex-layout.row#quickview-buylist-actions-2"
    ]
  },
  "flex-layout.row#quickview-buylist-actions-1": {
    "children": [
      "flex-layout.col#quickview-buylist-product-quantity",
      "flex-layout.col#quickview-buylist-add-to-card-button"
    ],
    "props": {
      "colSizing": "auto",
      "colGap": 6,
      "blockClass": "addToCartRow"
    }
  },

  "flex-layout.col#quickview-buylist-product-quantity": {
    "children": [
      "product-summary-quantity#quickview-buylist"
    ]
  },
  "product-summary-quantity#quickview-buylist": {
    "props": {
      "showLabel": false,
      "size": "regular"
    }
  },
  "flex-layout.col#quickview-buylist-add-to-card-button": {
    "children": [
      "add-to-cart-button"
    ],
    "props": {
      "width": "grow"
    }
  },

  "flex-layout.row#quickview-buylist-actions-2": {
    "children": [
      "link.product#button-pdp"
    ]
  },
  "link.product#button-pdp": {
    "props": {
      "buttonProps": {
        "variant": "secondary"
      },
      "displayMode": "button",
      "label": "View details",
      "href": "/{slug}/p"
    }
  },
  "flex-layout.row#quickview-buylist-main-row": {
    "children": [
      "flex-layout.col#quickview-buylist-images",
      "flex-layout.col#quickview-buylist-product-details"
    ],
    "props": {
      "blockClass": "quickviewMainRow"
    }
  },
  "flex-layout.col#quickview-buylist-images": {
    "children": [
      "product-images#quickview-buylist"
    ]
  },
  "flex-layout.col#quickview-buylist-product-details": {
    "children": [
      "modal-content#quickview-buylist",
      "modal-actions#quickview-buylist"
    ],
    "props": {
      "preventVerticalStretch": true,
      "blockClass": "quickviewDetails"
    }
  },
  "product-summary-sku-selector#quickview-buylist": {
    "props": {
      "thumbnailImage": "skuvariation",
      "imageHeight": 28,
      "blockClass": "quickview",
      "visibility": "more-than-one"
    }
  },
  "vtex.store-components:product-name": {
    "props": {
      "blockClass": "quickview"
    }
  },
  "product-images#quickview-buylist" : {
    "props": {
      "blockClass": "quickview",
      "showNavigationArrows": true
    }
  }
}
